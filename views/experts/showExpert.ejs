<% layout("/layouts/boilerplate.ejs") %>

<div class="row">
    <div class="col-9 offset-4">
        <br>
            <h2>About: <%=expert.name %></h2>
        <br>
    </div>

    <div class="card col-8 offset-4 product-card" style="width: 20rem">
        <img src="<%= expert.img.url %>" class="card-img-top" alt="expert_image" style="height: 18rem" >
      
        <div class="card-body">
          <p class="card-text">
            <i class="expert_info">Profession</i> : <%= expert.profession %><br />
            <i class="expert_info">About</i> :<%= expert.about %> <br />
            <i class="expert_info">Organization working for</i> : <%= expert.organization  %> <br />
            <i class="expert_info">Experience</i> : <%= expert.experience %> yrs <br /><br />
            <i class="message-font">Message <%= expert.name %></i>
            <a href="/expert/<%= expert.id %>/chat">
              <i class="fa-solid fa-message message-icon"></i>
            </a>
            <% if(currUser && currUser.id == expert.id) { %>
            <div class="btns mb-4">
              <a href="/experts/<%=expert._id %>/edit" class="btn btn-dark offset-4  form-btn">Edit</a>
              <br>
              <form method="POST" action="/experts/<%= expert.id %>/?_method=DELETE">
                  <button class="btn btn-dark offset-4  form-btn">Delete</button>
              </form>
              </div>
            <% } %>         
          </p>
        </div>
    </div>
   
    <div class="col-8 offset-4 mb-3">
        <% if(currUser) { %>
        <h4>Reviews</h4>
        <form action="/expert/<%= expert.id%>/reviews" method="POST" novalidate class="needs-validation">
            <div class="mb-3 mt-3">
                <label for="rating" class="form-label">Rating</label>
                <fieldset class="starability-fade">
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                  </fieldset>
            </div>

            <div class="mb-3 mt-3">
                <label for="comment" class="form-label">Review</label>
                <textarea class="form-control" rows="6" cols="9" name="review[comment]" id="comment" required></textarea>
                
                <div class="invalid-feedback">Please enter comments for review</div>
            </div>
            <button class="btn btn-md btn-outline form-btn">Submit</button>
        </form>
   
    <% } %>
    <!-- <h4>All Reviews</h4> -->
        <div class="row">
            <% for(review of expert.review) { %>
                <div class="card col-5 mt-3 ms-3">
                    <div class="card-body">
                        <h5 class="card-title">@ <%= review.createdBy.username %></h5>
                        <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                        <p class="card-text"><%= review.comment %></p>
                        <% if(currUser && currUser.id ===  review.createdBy.id) { %>
                        <form class="mb-3" method="POST" action="/expert/<%= expert.id %>/reviews/<%= review.id %>/?_method=DELETE">
                            <button class="btn btn-dark btn-sm ">Delete</button>
                        </form>
                        <% } %>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>
